<div class="profiles delete">
  <h2>Delete Profile</h2>

  <%= form_for(@profile, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this Profile?</p>

    <p class="reference-name"><%= f.object.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Profile") %>
    </div>

  <% end %>
</div>