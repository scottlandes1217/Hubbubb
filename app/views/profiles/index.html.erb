

<div class="row">
  <div class="col-12 col-md-3">
    <%= link_to new_profile_path, class: 'btn btn-primary' do %>Create New Profile<% end %>
  </div>

<% if @profiles.present? %>
  <nav class="nav profile-main-container">
    <% @profiles.each do |profile| %>
      <div class="profile-main-link">
        <p class="profile-name"><%= link_to profile.name, profile_path(profile), class: 'nav-link profile-main-link' %></p>
      <div class="profile-action-container">
        <%= link_to("Edit", edit_profile_path(profile), :class => 'profile-action-btn btn action edit') %>
        <%= link_to("Delete", delete_profile_path(profile), :class => 'profile-action-btn btn action delete') %>
      </div>
      </div>
    <% end %>
  </nav>
  
<% else %>
  <div class="text-muted">
    There are no new rooms in your area. Create your own room to get things started!
  </div>
<% end %>


  </div>
</div>
