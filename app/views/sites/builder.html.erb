<% content_for :navbar do %>
  <%= render 'shared/navbar_org' %>
<% end %>

<div class="builder-container">
  <!-- Top Menu Bar -->
  <div class="builder-top-menu bg-dark text-white p-2">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center gap-2">
        <h5 class="mb-0 text-white"><%= @site.name %></h5>
        <span class="badge bg-secondary" id="site-status">Draft</span>
      </div>
      <div class="btn-group" role="group">
        <%= link_to organization_site_path(@organization, @site), class: 'btn btn-sm btn-outline-light' do %>
          <i class="fas fa-arrow-left me-1"></i> Back
        <% end %>
        <button type="button" class="btn btn-sm btn-outline-light" id="preview-site">
          <i class="fas fa-eye me-1"></i> Preview
        </button>
        <button type="button" class="btn btn-sm btn-outline-light" id="publish-site">
          <i class="fas fa-globe me-1"></i> Publish
        </button>
        <button type="button" class="btn btn-sm btn-primary" id="save-site">
          <i class="fas fa-save me-1"></i> Save
        </button>
      </div>
    </div>
  </div>

  <div class="builder-body p-0">
    <!-- Left Sidebar with Tabs -->
    <div id="site-builder-sidebar">
      <!-- Tab Buttons -->
      <div class="sidebar-tabs">
        <button class="sidebar-tab active" data-tab="pages">
          <i class="fas fa-file-alt me-1"></i> Pages
        </button>
        <button class="sidebar-tab" data-tab="components">
          <i class="fas fa-cube me-1"></i> Components
        </button>
      </div>
      
      <!-- Pages Tab Content -->
      <div class="sidebar-tab-content active" id="pages-tab">
        <div class="sidebar-header">
          <h6 class="mb-0">Site Pages</h6>
        </div>
        <ul id="site-pages-list" class="sidebar-list"></ul>
        <div class="sidebar-footer">
          <button id="add-site-page" class="btn btn-sm btn-primary w-100">
            <i class="fas fa-plus me-1"></i> Add Page
          </button>
        </div>
      </div>
      
      <!-- Components Tab Content -->
      <div class="sidebar-tab-content" id="components-tab">
        <div class="sidebar-header">
          <h6 class="mb-0">Components</h6>
        </div>
        <div id="block-palette-content" class="sidebar-list"></div>
      </div>
    </div>
    
    <!-- Main Canvas -->
    <div id="site-builder-canvas">
      <div style="text-align: center; padding: 20px; color: #666;">
        Loading site builder...
      </div>
    </div>
  </div>
</div>

<script type="application/json" id="org-fields-metadata">
<%= site_builder_field_metadata_json %>
</script>

<% if @site.site_data.present? && @site.site_data['pages_json'].present? %>
<script type="application/json" id="saved-pages-data">
<%= @site.site_data['pages_json'].to_json.html_safe %>
</script>
<% end %>

<script type="module">
// Import and initialize the native site builder
import { initNativeSiteBuilder } from '<%= asset_path('sites/native-site-builder.js') %>';

// Set up menu buttons
document.addEventListener('DOMContentLoaded', () => {
  const saveBtn = document.getElementById('save-site');
  if (saveBtn) {
    saveBtn.onclick = () => {
      if (window.siteBuilderInstance) {
        window.siteBuilderInstance.save();
      }
    };
  }
  
  const previewBtn = document.getElementById('preview-site');
  if (previewBtn) {
    previewBtn.onclick = () => {
      // TODO: Implement preview functionality
      alert('Preview functionality coming soon!');
    };
  }
  
  const publishBtn = document.getElementById('publish-site');
  if (publishBtn) {
    publishBtn.onclick = () => {
      // TODO: Implement publish functionality
      if (confirm('Are you sure you want to publish this site? It will be visible to users.')) {
        alert('Publish functionality coming soon!');
      }
    };
  }
});

// Legacy cleanup functions (kept for backwards compatibility, but no longer needed)
</script>

